<div class="contents row">
  <% @user.menters.each do |menter| %>
    <div class="content_post">
    <div class="more">
        <ul class="more_list">
          <li>
            <%= link_to '詳細', menter_path(menter.id), method: :get %>
          </li>
          <% if user_signed_in? && current_user.id == menter.user_id %>
          <li>
            <%= link_to '編集', edit_menter_path(menter.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', menter_path(menter.id), method: :delete %>
          </li>
          <% end %>
        </ul>
      </div>
      <p><%= menter.name %></p>
      <span class="name">
        <%= menter.name %>
      </span>
    </div>
  <% end %>
</div>